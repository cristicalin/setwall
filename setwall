import sys
import os

import gi

from gi.repository import GObject as gobject
from gi.repository import Keybinder as keybinder

sys.path.append(os.path.dirname(os.path.abspath(__file__)))
from wpm.application import *

# main function call creates application object and starts processing
if __name__ == "__main__":
  # force UTF8 encoding
  reload(sys)
  sys.setdefaultencoding('utf-8')
  # allow other threads to execute
  (major, minor, rest) = gi.version_info
  if major==3 and minor < 11:
    gobject.threads_init()
  # we need to initialize keybinding
  keybinder.init()
  app = application()
  app.main()
  
  sys.exit(0)
