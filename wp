import dbus
import dbus.service
import sys
import os

import gi
gi.require_version('Gtk', '3.0')
gi.require_version('Notify', '0.7')
gi.require_version('AppIndicator3', '0.1')
gi.require_version('Keybinder', '3.0')

sys.path.append(os.path.dirname(os.path.abspath(__file__)))
from wpm.application import *

# Import global constants
from wpm.globals import *

if __name__ == '__main__':
  try:
    session_bus = dbus.SessionBus()
    session_obj = session_bus.get_object(
      "%s.%s" % (BASE_ID, APP_NAME),
      "%s/%s" % (APP_PATH, APP_NAME)
    )
    if len(sys.argv) == 2:
      exec "result = session_obj.%s()" % sys.argv[1]
    elif len(sys.argv) > 2:
      exec "result = session_obj.%s(\"%s\")" % (sys.argv[1], "\",\"".join(sys.argv[2:]))
    if result is not None:
      print result
  except dbus.DBusException as e:
    print "%s could not be contacted" % APP_FRIENDLY_NAME
    print e
    exit(1)
